<% include ('../partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= meal.name %></h1>
      <div style="width: 30%; margin: 29px auto">
        <form class="" action="/meals/<%= meal._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" id="name" value="<%= meal.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" id="price" value=" <%= meal.price %>" min="0.01" step="0.01">
          </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" id="image" value="<%= meal.image %>">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="description" id="description" value="<%= meal.description %>">
    </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block"type="submit" name="button">Submit</button>
      </div>
        </form>
        <a href="/meals">Go back</a>

      </div>
      </div>

</div>

<% include ('../partials/footer') %>
